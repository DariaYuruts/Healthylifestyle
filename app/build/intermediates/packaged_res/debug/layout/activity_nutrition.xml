<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NutritionActivity"
    android:background="@drawable/icon">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nutrition_necessity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/large_margin"
        android:text="@string/healthy_nutrition_necessity"
        android:textAllCaps="false"
        android:textSize="@dimen/medium_text"
        android:background="@drawable/round_back"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nutrition_menu_guide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/nutrition_necessity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/large_margin"
        android:text="@string/menu_guide"
        android:textAllCaps="false"
        android:textSize="@dimen/medium_text"
        android:background="@drawable/round_back"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nutrition_menu_example"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/nutrition_menu_guide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/large_margin"
        android:text="@string/menu_example"
        android:textAllCaps="false"
        android:textSize="@dimen/medium_text"
        android:background="@drawable/round_back"/>



</androidx.constraintlayout.widget.ConstraintLayout>