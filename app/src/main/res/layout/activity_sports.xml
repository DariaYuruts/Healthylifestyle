<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SportsActivity"
    android:background="@drawable/icon">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/green_300"
        android:theme="@style/ToolBarStyle"
        app:title="Упражнения для разминки"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sport_part1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/medium_margin"
        android:text="@string/sport_part1"
        android:textSize="@dimen/small_text"
        android:background="@drawable/round_back"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sport_part2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/sport_part1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/medium_margin"
        android:text="@string/sport_part2"
        android:textSize="@dimen/small_text"
        android:background="@drawable/round_back"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sport_part3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/sport_part2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/medium_margin"
        android:text="@string/sport_part3"
        android:textSize="@dimen/small_text"
        android:background="@drawable/round_back"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sport_part4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/sport_part3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/medium_margin"
        android:text="@string/sport_part4"
        android:textSize="@dimen/small_text"
        android:background="@drawable/round_back"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sport_part5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/sport_part4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/medium_margin"
        android:text="@string/sport_part5"
        android:textSize="@dimen/small_text"
        android:background="@drawable/round_back"/>

</androidx.constraintlayout.widget.ConstraintLayout>